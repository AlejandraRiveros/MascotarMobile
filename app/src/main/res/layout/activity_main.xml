<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#590D0D"
    android:backgroundTint="#490707"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="#631616"
        android:backgroundTint="#610A0A"
        android:fontFamily="@font/berkshire_swash"
        android:foregroundTint="#631616"
        android:text="@string/tvTitulo"
        android:textColor="#FFFCFC"
        android:textSize="30sp"
        app:drawableTint="#F1F1F1"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="189dp"
        android:layout_height="47dp"
        android:backgroundTint="#F3E6E6"
        android:onClick="ingresarRegistro"
        android:text="@string/btnIngresar"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintVertical_bias="0.477" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="219dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/heullaaa" />

</androidx.constraintlayout.widget.ConstraintLayout>